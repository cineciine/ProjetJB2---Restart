@model IEnumerable<ProjetJB2.Models.Group>

@{
    ViewBag.Title = "OSP - Group";
}

<h1 class="page-header">Group</h1>

<p>
	@Html.ActionLink("Create Group", "Create", new { id = "create" }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Project.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumGroup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumGroup)
        </td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.GroupId }, new { @class = "btn btn-success" })
			@Html.ActionLink("Details", "Details", new { id = item.GroupId }, new { @class = "btn btn-primary" })
			@Html.ActionLink("Delete", "Delete", new { id = item.GroupId }, new { @class = "btn btn-danger" })
		</td>
    </tr>
}

</table>
